<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StopsActivityBus">

    <ListView
        android:id="@+id/bus_stops_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="55dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/empty_stops_bus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Info"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lavender">
        <TextView
            android:id="@+id/bus_id_transfer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tram_number"
            android:gravity="top"
            android:layout_marginStart="15dp"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/bus_id_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tram_id_transfer"
            android:layout_marginStart="80dp"
            android:text="@string/tram_id_string"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>